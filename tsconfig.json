{
  "compilerOptions": {
    "target": "esnext",
    "module": "umd",
    "moduleResolution": "Node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "preserveConstEnums": true,
    "pretty": true,
    "strict": true,
    "baseUrl": "src",
    "outDir": "dist",
    "lib": [
      "esnext",
      "dom",
      "dom.iterable"
    ],
    "paths": {
      "@config/*": ["config/*"],
      "@enums/*": ["enums/*"],
      "@helpers/*": ["helpers/*"],
      "@interfaces/*": ["interfaces/*"],
      "@scripts/*": ["scripts/*"],
      "@services/*": ["services/*"]
    }
  },
  "exclude": [
    "dist",
    "build"
  ]
}
