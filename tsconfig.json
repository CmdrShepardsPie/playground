{
  "compilerOptions": {
    "target": "esnext",
    "module": "umd",
    "moduleResolution": "Node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "preserveConstEnums": true,
    "pretty": true,
    "lib": [
      "esnext",
      "dom"
    ],
    "baseUrl": "./",
    "paths": {
      "@config/*": ["src/config/*"],
      "@enums/*": ["src/enums/*"],
      "@helpers/*": ["src/helpers/*"],
      "@interfaces/*": ["src/interfaces/*"],
      "@scripts/*": ["src/scripts/*"],
      "@services/*": ["src/services/*"]
    }
  }
}
